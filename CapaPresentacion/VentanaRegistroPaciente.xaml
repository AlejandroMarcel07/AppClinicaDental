<Window x:Class="CapaPresentacion.VentanaRegistroPaciente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion"
        mc:Ignorable="d"
        Title="VentanaRegistroPaciente" Height="550" Width="840"
        WindowStyle="None"
        Background="Transparent" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown" 
        Loaded="Window_Loaded"
        >
    <Border Background="#FBFBFB"
            CornerRadius="10"
            BorderThickness="2"
            BorderBrush="#d1cdcd"
            Margin="30">

        <Border.Effect>
            <DropShadowEffect Opacity="0.5" ShadowDepth="0" BlurRadius="35" Color="#3a3f4a"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Frame Grid.Row="0" Name="FrmRegistropaciente"
                   Source="Paginas/PagPerfilPaciente.xaml"
                   NavigationUIVisibility="Hidden">
               

            </Frame>
        </Grid>
    </Border>
</Window>
