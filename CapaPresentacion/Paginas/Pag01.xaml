<Page x:Class="CapaPresentacion.Paginas.Pag01"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapaPresentacion.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="820"
      Title="Pag01">
    <Border Background="#FBFBFB"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5 0 0 15">
                    <TextBlock Text="| Inicio Densy"
                               FontFamily="{StaticResource Outfit-Bold}"
                               FontSize="20"
                               />
                    <TextBlock Text="Tabla de registro paciente"
                               FontFamily="{StaticResource Outfit-Bold}"
                               FontSize="17"
                               Margin="0 15 0 0"/>
                    <TextBlock
                        FontFamily="{StaticResource Outfit-Regular}"
                        FontSize="15"
                        TextWrapping="Wrap"
                        Margin="0 5 0 0"
                        Text="Ingrese un nombre de paciente al cual quieras ver su registro clinico."/>
                </StackPanel>
                <Border Background="{StaticResource ColorCelesteBajo}"
                        Grid.Column="1"
                        Width="150"
                        HorizontalAlignment="Right"
                        Margin="0 0 0 50"
                                Height="35"
                                CornerRadius="5 2 2 5"
                         
                                BorderThickness="0 0 4 0"
                                BorderBrush="#10B70D" Cursor=""
                                >
                    <TextBlock
                                       VerticalAlignment="Center"
                                       Margin="20 0 0 0"
                                       FontFamily="{StaticResource Outfit-Regular}"
                                       FontSize="14"
                                       Text="Citas para hoy: 4"/>

                </Border>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0 0 0 10"
                            
                            >
                    <Border Width="170"
                          Height="35"
                            BorderBrush="#A5A3A3"
                            BorderThickness="1"
                            CornerRadius="5"
                           
                          >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="{StaticResource IcoBuscar}"
                                  Fill="#A5A3A3" VerticalAlignment="Center"
                                  Width="20"
                                  Height="20"
                                  Margin="7 0 0 0"/>
                            <TextBlock Margin="9 7 20 0"
                                       Foreground="#A5A3A3"
                                       x:Name="EtiquetaBusquedad"
                                       Cursor="IBeam"   
                                       FontSize="14"
                                       MouseLeftButtonDown="EtiquetaBusquedad_MouseLeftButtonDown"
                                       FontFamily="{StaticResource Outfit-Regular}"
                                       Grid.Column="1"
                                    >buscar paciente</TextBlock>
                            <TextBox Margin="1"
                                     Background="{x:Null}"
                                     BorderBrush="Transparent"
                                     x:Name="txtBarraBusquedad"
                                     Visibility="Collapsed"
                                     Style="{StaticResource NoFocusVisualStyleTextBox}"
                                     Padding="9 6 20 0"
                                     GotFocus="txtBarraBusquedad_GotFocus"
                                     LostFocus="txtBarraBusquedad_LostFocus"
                                     FontFamily="{StaticResource Outfit-Regular}"
                                     FontSize="14"
                                     Grid.Column="1"
                                     TabIndex="1"
                                     ></TextBox>
                        </Grid>
                    </Border>
                    <Button Height="35"
                            Width="170"
                            Margin="10 0 0 0"
                            x:Name="AgregarPaciennte"
                            Click="AgregarPaciennte_Click"
                            Style="{StaticResource BtnLogin}">
                        <StackPanel Height="35"
                                    
                              Orientation="Horizontal"
                              Width="150"
                             >

                            <Path Data="{StaticResource IcoAgregar}"
                                          Fill="white"
                                          VerticalAlignment="Center"
                                          Margin="5 0 10 0"/>
                            <TextBlock Text="Agregar paciente" 
                                     Style="{StaticResource menuButtonText}"
                                     Foreground="white"
                                     VerticalAlignment="Center"                
                                     FontFamily="{StaticResource Outfit-Regular}"
                                     FontSize="14"/>

                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>

            <DataGrid AutoGenerateColumns="False" Grid.Row="1" Background="Transparent" BorderThickness="0" FontFamily="{StaticResource Outfit-Regular}" FontSize="14">
                <DataGrid.Resources>
                    <!-- Estilo para las celdas -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0 1 0 0"/>
                        <Setter Property="BorderBrush" Value="Gray"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                    <!-- Estilo para las filas alternas (para un efecto zebra) -->
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="Black"/>
                    </Style>
                    <!-- Estilo para el encabezado de las columnas -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Height" Value="35"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Width="*" Binding="{Binding Columna1}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Edad" Width="*" Binding="{Binding Columna2}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Género" Width="*" Binding="{Binding Columna3}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Dirección" Width="*" Binding="{Binding Columna4}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Cedula" Width="*" Binding="{Binding Columna5}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Teléfono" Width="*" Binding="{Binding Columna6}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Gmail" Width="*" Binding="{Binding Columna7}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Ocupación" Width="*" Binding="{Binding Columna8}" CanUserResize="False" CanUserReorder="False"/>
                    <DataGridTextColumn Header="Acciones" Width="*" Binding="{Binding Columna8}" CanUserResize="False" CanUserReorder="False"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Border>
</Page>
